#include <iostream>
using namespace std;

int EnterDimention(int);
void RandomArray(int a[], int n);
int EnterTheNumberOfElementsInRow(int n);
void DisplayArray(int[], int);
void DisplayTable(int[], int, int);

int main()
{
	while (true)
	{

		const int N = 100;
		int a[N] = { 0 };
		int n = EnterDimention(N);
		RandomArray(a, n);
		cout << "Source array: " << endl;
		DisplayArray(a, n);
		cout << endl;
		int k = EnterTheNumberOfElementsInRow(n);
		cout << endl;
		DisplayTable(a, k, n);

		system("pause");
		system("cls");

		char yes;
		cout << "Would you like to countinie? Press y/Y: " << endl;
		cin >> yes;
		if (yes == 'y' || yes == 'Y')
			continue;
		break;
	}
	return 0;
}

int EnterDimention(int n)
{
	int k;
	while (true)
	{
		cout << "Enter the amount of elements (n <= 100): ";
		cin >> k;
		if (k > 0 && k <= n) return k;
		cout << "Error! Try again...";
	}
}
void RandomArray(int a[], int n)
{
	for (int i = 0; i < n; i++)
		a[i] = rand() % 200 - 100;
}
int EnterTheNumberOfElementsInRow(int n)
{
	int k;
	while (true)
	{
		cout << "Enter the amount of elements in a row: ";
		cin >> k;
		if (k > 0 && k <= n) return k;
		cout << "Error! Try again...";
	}
}
void DisplayArray(int a[], int n)
{
	for (int i = 0; i < n; i++)
		cout << a[i] << ", ";
}
void DisplayTable(int a[], int k, int n)
{
	int j = 0;
	for (int i = 0; i < n; i++)
	{
		cout << a[i] << ' ';
			j++;
		if (j % k == 0)
		{
			cout << endl;
			cout << '\t';
		}	
	}
}
